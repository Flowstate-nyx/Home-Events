# ============================================
# HOME PRODUCTIONS BACKEND v4.0
# Environment Variables
# ============================================

# ============================================
# REQUIRED (App crashes without these)
# ============================================

# PostgreSQL connection string (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT secrets (MUST be at least 32 characters each)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-32-char-minimum-access-token-secret-here
JWT_REFRESH_SECRET=your-32-char-minimum-refresh-token-secret-here

# ============================================
# SERVER
# ============================================

# Port (Railway sets this automatically)
PORT=8080

# Environment
NODE_ENV=production

# CORS origin (your frontend domain)
CORS_ORIGIN=https://homeproductions.art

# ============================================
# EMAIL (Required for ticket delivery)
# ============================================

# SMTP settings (Hostinger example)
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_USER=noreply@homeproductions.art
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@homeproductions.art

# ============================================
# CLOUDINARY (Required for image uploads)
# ============================================

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# DEFAULT ADMIN (Optional - created on first run)
# ============================================

DEFAULT_ADMIN_EMAIL=admin@homeproductions.art
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# TOKEN SETTINGS (Optional - has defaults)
# ============================================

# Access token expiry (default: 15m)
JWT_ACCESS_EXPIRES=15m

# Refresh token expiry in days (default: 7)
JWT_REFRESH_EXPIRES_DAYS=7

# ============================================
# RATE LIMITING (Optional - has defaults)
# ============================================

# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window (default: 100)
RATE_LIMIT_MAX=100

# Auth endpoint max (default: 10)
AUTH_RATE_LIMIT_MAX=10

# ============================================
# LOGGING (Optional)
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info
